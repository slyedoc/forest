    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'forests'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=forests",
                ],
                "filter": {
                    "name": "forests",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'bevy_gym'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=bevy_gym",
                    "--package=bevy_gym"
                ],
                "filter": {
                    "name": "bevy_gym",
                    "kind": "bin"
                }
            },
            "args": ["-e", "cartpole", "-h"],
            "env": {
                
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"],
        }
    ]
}